
.mine-container{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.mine-top-container{
	width:90%;
	height:186px;
	background:rgba(64,158,255,1);
	box-shadow:0px 2px 4px 0px rgba(0,0,0,0.5);
	border-radius:10px;
	text-align: center;
	margin-top: 23px;
	margin-bottom: 29px;
}
.top-img{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	margin-top: 17px;
	margin-bottom: 15px;
}
.top-img image{
	width:82px;
	height:82px;
	border-radius: 50%;
	border:1px solid rgba(255,255,255,1);
}
.top-text{
	font-size:19px;
	font-family:PingFangSC-Medium,PingFang SC;
	font-weight:500;
	color:rgba(255,255,255,1);
	line-height:26px;
	margin-bottom: 9px;
}
.top-text2{
	font-size:11px;
	font-family:PingFangSC-Medium,PingFang SC;
	font-weight:500;
	color:rgba(255,255,255,1);
	line-height:16px;
}
.mine-middle{
	width:90%;
	height:44px;
	background:rgba(64,158,255,1);
	box-shadow:0px 2px 4px 0px rgba(0,0,0,0.5);
	border-radius:10px;
	margin-bottom: 9px;
	position: relative;
}
.mine-middle-img{
	display: inline-block;
	position: absolute;
	top: 14px;
	left: 15px;
}
.mine-middle-img image{
	width: 16px;
	height: 16px;
}
.mine-middle-text{
	display: inline-block;
	font-size:14px;
	font-family:STHeitiSC-Medium,STHeitiSC;
	font-weight:500;
	color:rgba(255,255,255,1);
	line-height:44px;
	position: absolute;
	left: 54px;
}

